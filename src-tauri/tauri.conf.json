{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-update",
  "version": "0.1.0",
  "identifier": "co.com.ies.pruebas.tauri-update",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run generate"
  },
  "app": {
    "windows": [
      {
        "title": "nuxt-app",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEwMEE2M0ZDNENERTJEQ0IKUldUTExkNU0vR01LRUt3aXM2eXoxZGw5TkJ4elpaUkIyQmhZZzVFVWV5YXVCT2VOMm5yRDN6REkK",
      "endpoints": [
        "https://github.com/phipex/test-release/releases/latest/download/latest.json"
      ]
    }
  }
}
